@{
    var title = ViewBag.Title as string;

    if (string.IsNullOrEmpty(title))
    {
        title = "Code for Good West Michigan";
    }
    else if (!title.Contains("Code for Good", StringComparison.OrdinalIgnoreCase))
    {
        title = $"{title} | Code for Good West Michigan";
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@title</title>
    @RenderSection("meta", false)
    <base href="/" />
    @await Html.PartialAsync("_Mobile_Icons")
    <link rel="manifest" href="/manifest.json">
    <link rel="shortcut icon" href="/favicon.ico">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css" integrity="sha384-+d0P83n9kaQMCwj8F4RJB66tzIwOKmrdb46+porD/OvrJ+37WqIM7UoBtwHO6Nlg" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
</head>
<body>
    @{
        if (IsSectionDefined("nav"))
        {
            // This hides the nav on the homepage
            @RenderSection("nav", required: false)
        }
        else
        {
            @await Html.PartialAsync("_Nav")
        }
    }
    @RenderBody()
    @await Html.PartialAsync("_Footer")
    <script src="~/js/app.min.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
